<style>
    .contact-menu-actions{
        background: white;
        border-radius: 8px;
        backdrop-filter: blur(40px);
        display: none;
        position: absolute;
        box-shadow: 0px 0px 16px 5px rgba(0, 0, 0, .08);
        z-index: 998;
        flex-direction: column;
        padding: 15px 0;
    }
    
    .contact-menu-action{
        display: flex;
        font-size: .9rem;
        padding: 10px 20px;
        align-items: center;
        gap: 5px;
        cursor: pointer;
    }

    .contact-menu-action span {
        font-size: 1.3rem;
    }

    .contact-menu-action:hover{
        background: rgba(0, 0, 0, .03)
    }
</style>
<div class="contact-menu-actions">
    <a class="contact-menu-action" id="delete-contact-button" style="color: rgb(232, 45, 45); text-decoration: none;">
        <span class="material-symbols-outlined">
            person_remove
        </span>
        Desfazer amizade
    </a>
</div>

<script>
    const contactActionMenu = document.querySelector('.contact-menu-actions');
    const deleteContactButton = document.querySelector('#delete-contact-button');
    function openMenuOptionContact(contactId, event){
        deleteContactButton.href = `/delete-contact/${contactId}`;
        let mouseX = event.screenX;
        let mouseY = event.screenY;
        contactActionMenu.style.display = 'flex';
        contactActionMenu.style.transform = `translate(${mouseX-230}px, ${mouseY-210}px)`;
    }

    function closeMenuOptionContacts(){
            contactActionMenu.style.display = 'none';
    }

    document.addEventListener('click', event => {
        if(!contactActionMenu.contains(event.target) && event.target.className !== 'material-symbols-outlined'){
            closeMenuOptionContacts()
        }  
    })
</script>